<div class="container">
  <div class="form-container">
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="list-subscription-container">
          <h2 class="text-center">Add a reminder</h2>

          <%= simple_form_for ([@user_subscription, @reminder]) do |f| %>
            <%= f.input :date, as: :date, html5: true %>
            <%= f.input :details %>
            <div class="text-right">
              <%= f.button :submit, "Submit", class: 'btn btn-primary mt-3' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
