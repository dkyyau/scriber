<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="list-subscription-container">
        <h1 class="my-3 text-center">Edit your subscription</h1>
        <%= simple_form_for(@user_subscription) do |f| %>
         <%= f.association :subscription %>
         <div class="form-row">
          <div class="col">
            <%= f.input :start_date, as: :date, html5: true %>
          </div>
          <div class="col">
            <%= f.input :end_date, as: :date, html5: true %>
          </div>
        </div>
          <%= f.input :payment_date, as: :date, html5: true, label: "Payment date 💳" %>
          <%= f.input :cost, label: "Cost 💰", placeholder: "£"%>
          <%= f.input :billing_period, label: "Billing Period ⏰" %>
         <%= f.button :submit, "Update Subscription", class: 'btn btn-primary my-3 mr-3' %>


        <% end %>
      </div>
    </div>
  </div>
</div>


